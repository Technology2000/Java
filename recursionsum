import java.util.*;
public class Recursionsum {
   static int sum(int n){
        if(n==1){
            return 1;
        }
        else {
            return n+sum(n-1);
        }
    }
    
    public static void main(String args[]) {
    Scanner sc=new Scanner(System.in);
    int N=sc.nextInt();
      Recursionsum obj=new Recursionsum();
      System.out.println(obj.sum(N));
    }
}
